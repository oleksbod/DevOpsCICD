# Example terraform.tfvars file for lesson-db-module
# Copy this file to terraform.tfvars and fill in your values

# RDS Configuration
use_aurora = false  # Set to true for Aurora cluster, false for regular RDS
rds_engine = "postgres"  # postgres or mysql
rds_engine_version = ""  # Leave empty for default version
rds_instance_class = "db.t3.micro"
rds_multi_az = false
rds_allocated_storage = 20
rds_max_allocated_storage = 100
rds_storage_type = "gp2"
rds_storage_encrypted = true
rds_database_name = "mydb"
rds_master_username = "dbadmin"
rds_master_password = ""  # Leave empty to generate random password
rds_backup_retention_period = 7
rds_backup_window = "03:00-04:00"
rds_maintenance_window = "sun:04:00-sun:05:00"
rds_allowed_cidr_blocks = []  # Add CIDR blocks for database access
rds_allowed_security_groups = []  # Add security group IDs for database access
rds_max_connections = 100
rds_log_statement = "none"
rds_work_mem = 4
rds_deletion_protection = false
rds_skip_final_snapshot = false

# Aurora Configuration (only used when use_aurora = true)
aurora_cluster_instances = 1
aurora_auto_pause = false
aurora_seconds_until_auto_pause = 300
aurora_max_capacity = 16
aurora_min_capacity = 2

# GitHub Configuration
github_token = ""  # Your GitHub Personal Access Token
github_username = ""  # Your GitHub username
